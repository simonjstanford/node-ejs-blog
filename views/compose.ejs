<%- include('partials/header'); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input id="postTitle" class="form-control" type="text" name="postTitle">
  </div>
  <div class="form-group">
    <label for="postContent">Post</label>
    <textarea name="postBody" class="form-control" rows="8" cols="80"></textarea>
  </div>
  <button id="postContent" type="submit" class="btn btn-primary" name="button">Publish</button>
</form>

<%- include('partials/footer'); -%>
